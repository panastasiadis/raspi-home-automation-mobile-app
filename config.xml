<?xml version='1.0' encoding='utf-8'?>
<widget id="io.cordova.hellocordova" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <hook src="scripts/prebuild.js" type="before_prepare" />
    <name>Home Automation</name>
    <description>
        A sample Apache Cordova application that responds to the deviceready event.
    </description>
    <author email="dev@cordova.apache.org" href="http://cordova.io">
        Apache Cordova Team
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="*" />
    <allow-navigation href="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <prefernce name="AndroidPersistentFileLocation" value="Compatibility"/>
    <platform name="android">
        <allow-intent href="market:*" />
        <icon src="www/home-automation128.png" density="ldpi"/>
        <icon src="www/home-automation256.png" density="mdpi"/>
        <icon src="www/home-automation512.png" density="hdpi"/>
        <icon src="www/home-automation512.png" density="xhdpi"/>
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
</widget>
